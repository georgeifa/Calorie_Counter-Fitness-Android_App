<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegisterActivity"
    android:background="#25273e">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <EditText
        android:id="@+id/username_Reg_ETXT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"

        android:background="@drawable/edit_text_style"

        android:singleLine="true"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:fontFamily="@font/nunito_bold"

        android:hint="@string/username"

        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingVertical="10dp"

        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:textColorHint="#C6CCC6"

        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/email_Reg_ETXT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"

        android:background="@drawable/edit_text_style"

        android:singleLine="true"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:fontFamily="@font/nunito_bold"

        android:hint="@string/email"

        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:paddingVertical="10dp"

        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:textColorHint="#C6CCC6"

        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_Reg_ETXT" />

    <EditText
        android:id="@+id/password_Reg_ETXT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"

        android:elevation="3dp"

        android:singleLine="true"
        android:background="@drawable/edit_text_style"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:fontFamily="@font/nunito_bold"

        android:drawableEnd="@drawable/ic_show_password"

        android:hint="@string/password"

        android:inputType="textPassword"
        android:paddingVertical="10dp"
        android:paddingStart="15dp"

        android:paddingEnd="15dp"
        android:textColor="@color/white"
        android:textColorHint="#C6CCC6"
        android:textSize="22sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_Reg_ETXT"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/conpassword_Reg_ETXT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"

        android:background="@drawable/edit_text_style"

        android:singleLine="true"
        android:drawableStart="@drawable/ic_password"
        android:drawableEnd="@drawable/ic_show_password"
        android:drawablePadding="10dp"
        android:elevation="3dp"

        android:fontFamily="@font/nunito_bold"

        android:hint="@string/confirm_password"

        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingVertical="10dp"

        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="@color/white"
        android:textColorHint="#C6CCC6"

        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_Reg_ETXT" />

    <TextView
        android:id="@+id/signup_reg_TXT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"

        android:layout_marginEnd="40dp"

        android:background="@drawable/btn_bg_style"
        android:elevation="3dp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:text="@string/sign_up"
        android:textColor="@color/white"

        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conpassword_Reg_ETXT" />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="60dp"
        android:background="#008000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textview01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="40dp"


        android:elevation="3dp"
        android:fontFamily="@font/nunito_bolditalic"
        android:text="@string/already_have_an_account"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <TextView
        android:id="@+id/login_Reg_TXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="40dp"


        android:elevation="3dp"
        android:fontFamily="@font/nunito_bolditalic"
        android:text="@string/log_in"
        android:textColor="#008000"

        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textview01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textview01"
        app:layout_constraintTop_toTopOf="@+id/textview01" />

</androidx.constraintlayout.widget.ConstraintLayout>